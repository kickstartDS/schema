{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://sanity.kickstartds.com/visual.sanity.schema.json",
  "title": "Sanity Visual",
  "description": "Visual for use in Sanity CMS",
  "type": "object",
  "properties": {
    "fields": {
      "type": "object",
      "properties": {
        "headline": {
          "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/content"
        },
        "text": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/text"
        },
        "link": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/link"
        },
        "horizontal": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/horizontal"
        },
        "vertical": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/vertical"
        },
        "image": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/media/properties/image/properties/srcDesktop"
        },
        "backgroundColor": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/backgroundColor"
        }
      }
    },
    "pointers": {
      "const": {
        "headline": "#/headline/content",
        "text": "#/properties/text",
        "link": "#/properties/link",
        "horizontal": "#/properties/horizontal",
        "vertical": "#/properties/vertical",
        "image": "#/properties/image",
        "backgroundColor": "#/properties/backgroundColor"
      }
    },
    "preview": {
      "const": {
        "select": {
          "title": "headline.content",
          "subtitle": "text",
          "media": "srcDesktop"
        }
      }
    }
  }
}
