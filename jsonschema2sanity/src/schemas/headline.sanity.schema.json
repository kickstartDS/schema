{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://sanity.kickstartds.com/headline.schema.json",
  "title": "Sanity Headline",
  "description": "Headline for use in Sanity CMS",
  "type": "object",
  "properties": {
    "level": { 
      "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/level"
    },
    "styleAs": { 
      "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/styleAs"
    },
    "align": {
      "const": "left"
    },
    "content": { 
      "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/content"
    },
    "subheadline": { 
      "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/subheadline"
    },
    "preview": {
      "const": {
        "select": {
          "title": "content",
          "subtitle": "subheadline"
        }
      }
    }
  }
}
  