  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}",
      "args": [],
      "windows": { "runtimeExecutable": "nvs.cmd" },
      "osx": { "runtimeExecutable": "nvs" },
      "linux": { "runtimeExecutable": "nvs" }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Cambria Jest tests",
      "program": "${workspaceFolder}/tools/cambria/node_modules/@rushstack/heft/lib/start.js",
      "cwd": "${workspaceFolder}/tools/cambria",
      "args": ["--debug", "test", "--clean"],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "runtimeArgs": ["--experimental-vm-modules"]
    }
  ]
}
